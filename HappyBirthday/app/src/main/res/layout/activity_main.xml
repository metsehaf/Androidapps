<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.NewYearParty.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_weight="1"
        android:src="@drawable/dj"
        android:id="@+id/imageView" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_weight="1"
        android:src="@drawable/Awash"
        android:id="@+id/Awash"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="VIP INVITE FOR NEW YEARS AT AWASH CAFE!"
        android:id="@+id/textView"
        android:layout_weight="1"
        android:textColor="#212121"
        android:fontFamily="sans-serif-light"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:textColor="#212121"
        android:fontFamily="sans-serif-light"
        android:text="You Are All Invited, Entrance 1000$" />

</LinearLayout>
